@{
    ViewData["Title"] = "Agencias";
}

<div class="container">
    <h2>Agencias</h2>
    <button class="btn btn-primary mb-3" data-toggle="modal" data-target="#createAgenciaModal">Nueva Agencia</button>
    <table id="agenciasTable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>ID Agencia</th>
                <th>Canal Servicio</th>
                <th>Código</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Fecha Registro</th>
                <th>Fecha Modificado</th>
                <th>Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- Modal para crear agencia -->
<div class="modal fade" id="createAgenciaModal" tabindex="-1" aria-labelledby="createAgenciaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createAgenciaModalLabel">Nueva Agencia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createAgenciaForm">
                    <div class="form-group">
                        <label for="createIdCanalServicio">ID Canal Servicio</label>
                        <input type="number" class="form-control" id="createIdCanalServicio" name="idCanalServicio" required>
                    </div>
                    <div class="form-group">
                        <label for="createCodigoAgencia">Código</label>
                        <input type="text" class="form-control" id="createCodigoAgencia" name="codigoAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="createNombreAgencia">Nombre</label>
                        <input type="text" class="form-control" id="createNombreAgencia" name="nombreAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="createDireccionAgencia">Dirección</label>
                        <input type="text" class="form-control" id="createDireccionAgencia" name="direccionAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="createTelefonoAgencia">Teléfono</label>
                        <input type="text" class="form-control" id="createTelefonoAgencia" name="telefonoAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="createIdUsuario">ID Usuario</label>
                        <input type="number" class="form-control" id="createIdUsuario" name="idUsuario" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para editar agencia -->
<div class="modal fade" id="editAgenciaModal" tabindex="-1" aria-labelledby="editAgenciaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAgenciaModalLabel">Editar Agencia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editAgenciaForm">
                    <input type="hidden" id="editAgenciaId" name="idAgencia">
                    <input type="hidden" id="editFechaRegistro" name="fechaRegistro">
                    <input type="hidden" id="editFechaModificado" name="fechaModificado">
                    <div class="form-group">
                        <label for="editIdCanalServicio">ID Canal Servicio</label>
                        <input type="number" class="form-control" id="editIdCanalServicio" name="idCanalServicio" required>
                    </div>
                    <div class="form-group">
                        <label for="editCodigoAgencia">Código</label>
                        <input type="text" class="form-control" id="editCodigoAgencia" name="codigoAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="editNombreAgencia">Nombre</label>
                        <input type="text" class="form-control" id="editNombreAgencia" name="nombreAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="editDireccionAgencia">Dirección</label>
                        <input type="text" class="form-control" id="editDireccionAgencia" name="direccionAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="editTelefonoAgencia">Teléfono</label>
                        <input type="text" class="form-control" id="editTelefonoAgencia" name="telefonoAgencia" required>
                    </div>
                    <div class="form-group">
                        <label for="editIdUsuario">ID Usuario</label>
                        <input type="number" class="form-control" id="editIdUsuario" name="idUsuario" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal para confirmar eliminación de agencia -->
<div class="modal fade" id="deleteAgenciaModal" tabindex="-1" aria-labelledby="deleteAgenciaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAgenciaModalLabel">Eliminar Agencia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar esta agencia?</p>
                <form id="deleteAgenciaForm">
                    <input type="hidden" id="deleteIdAgencia" name="idAgencia">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/agencias.js"></script>
