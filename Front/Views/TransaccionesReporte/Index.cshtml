@{
    ViewData["Title"] = "Reporte de Transacciones";
}

<div class="container">
    <h2>Reporte de Transacciones</h2>
    <div class="row mb-3">
        <div class="col-md-4">
            <label for="fechaInicio">Fecha Inicio:</label>
            <input type="text" class="form-control" id="fechaInicio" placeholder="yyyy-mm-dd">
        </div>
        <div class="col-md-4">
            <label for="fechaFin">Fecha Fin:</label>
            <input type="text" class="form-control" id="fechaFin" placeholder="yyyy-mm-dd">
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button class="btn btn-primary" id="btnFiltrar">Filtrar</button>
        </div>
    </div>
    <table id="reporteTransaccionesTable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Fecha Transacción</th>
                <th>Tipo de Cliente</th>
                <th>Identidad del Cliente</th>
                <th>Nombre del Cliente</th>
                <th>Código Agencia</th>
                <th>Nombre Agencia</th>
                <th>Canal de Servicio</th>
                <th>Código Motivo Transacción</th>
                <th>Nombre Motivo Transacción</th>
                <th>Monto de Transacción</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
<script src="~/js/reporteTransacciones.js"></script>
