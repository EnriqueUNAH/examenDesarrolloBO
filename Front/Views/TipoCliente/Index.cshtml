@{
    ViewData["Title"] = "Tipo Cliente";
}

<div class="container">
    <h2>Tipo Cliente</h2>
    <button class="btn btn-primary mb-3" data-toggle="modal" data-target="#createTipoClienteModal">Nuevo Tipo Cliente</button>
    <table id="tipoClienteTable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>ID Tipo Cliente</th>
                <th>Código Tipo Cliente</th>
                <th>Nombre Tipo Cliente</th>
                <th>Fecha Registro</th>
                <th>Fecha Modificado</th>
                <th>ID Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- Modal para crear tipo cliente -->
<div class="modal fade" id="createTipoClienteModal" tabindex="-1" aria-labelledby="createTipoClienteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTipoClienteModalLabel">Nuevo Tipo Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createTipoClienteForm">
                    <div class="form-group">
                        <label for="createCodigoTipoCliente">Código Tipo Cliente</label>
                        <input type="text" class="form-control" id="createCodigoTipoCliente" name="codigoTipoCliente" required>
                    </div>
                    <div class="form-group">
                        <label for="createNombreTipoCliente">Nombre Tipo Cliente</label>
                        <input type="text" class="form-control" id="createNombreTipoCliente" name="nombreTipoCliente" required>
                    </div>
                    <div class="form-group">
                        <label for="createIdUsuario">ID Usuario</label>
                        <input type="number" class="form-control" id="createIdUsuario" name="idUsuario" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para editar tipo cliente -->
<div class="modal fade" id="editTipoClienteModal" tabindex="-1" aria-labelledby="editTipoClienteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editTipoClienteModalLabel">Editar Tipo Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editTipoClienteForm">
                    <input type="hidden" id="editTipoClienteId" name="idTipoCliente">
                    <input type="hidden" id="editFechaRegistro" name="fechaRegistro">
                    <input type="hidden" id="editFechaModificado" name="fechaModificado">
                    <div class="form-group">
                        <label for="editCodigoTipoCliente">Código Tipo Cliente</label>
                        <input type="text" class="form-control" id="editCodigoTipoCliente" name="codigoTipoCliente" required>
                    </div>
                    <div class="form-group">
                        <label for="editNombreTipoCliente">Nombre Tipo Cliente</label>
                        <input type="text" class="form-control" id="editNombreTipoCliente" name="nombreTipoCliente" required>
                    </div>
                    <div class="form-group">
                        <label for="editIdUsuario">ID Usuario</label>
                        <input type="number" class="form-control" id="editIdUsuario" name="idUsuario" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para confirmar eliminación de tipo cliente -->
<div class="modal fade" id="deleteTipoClienteModal" tabindex="-1" aria-labelledby="deleteTipoClienteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteTipoClienteModalLabel">Eliminar Tipo Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este tipo cliente?</p>
                <form id="deleteTipoClienteForm">
                    <input type="hidden" id="deleteTipoClienteId" name="idTipoCliente">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>
